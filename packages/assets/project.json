{
  "name": "@alga-psa/assets",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/assets/src",
  "projectType": "library",
  "tags": ["scope:assets", "type:vertical"],
  "targets": {
    "build": {
      "executor": "nx:noop"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/packages/assets"],
      "options": {
        "configFile": "packages/assets/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/assets/**/*.{ts,tsx}"]
      }
    }
  }
}
