{
  "name": "@alga-psa/workflows",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/workflows/src",
  "projectType": "library",
  "tags": ["scope:workflows", "type:vertical"],
  "targets": {
    "build": {
      "executor": "nx:noop"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/workflows"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/workflows/**/*.{ts,tsx}"]
      }
    }
  }
}
