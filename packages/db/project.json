{
  "name": "@alga-psa/db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/db/src",
  "projectType": "library",
  "tags": ["scope:db", "type:horizontal"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/db",
        "tsConfig": "packages/db/tsconfig.json",
        "packageJson": "packages/db/package.json",
        "main": "packages/db/src/index.ts",
        "assets": []
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/db"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/db/**/*.{ts,tsx}"]
      }
    }
  }
}
