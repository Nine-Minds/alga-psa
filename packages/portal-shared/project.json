{
  "name": "@alga-psa/portal-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/portal-shared/src",
  "projectType": "library",
  "tags": ["scope:portal-shared", "type:horizontal"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": ["production", "^production"],
      "dependsOn": ["@alga-psa/client-portal:build", "@alga-psa/core:build", "@alga-psa/db:build"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/portal-shared/**/*.{ts,tsx}"]
      }
    }
  }
}
