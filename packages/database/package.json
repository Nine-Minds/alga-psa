{
  "name": "@alga-psa/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./connection": {
      "types": "./dist/connection.d.ts",
      "import": "./dist/connection.js"
    },
    "./tenant": {
      "types": "./dist/tenant.d.ts",
      "import": "./dist/tenant.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js"
    },
    "./repositories/*": {
      "types": "./dist/repositories/*.d.ts",
      "import": "./dist/repositories/*.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "knex": "^3.1.0",
    "pg": "^8.16.0",
    "pg-types": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@alga-psa/shared": "*"
  }
}
