{
  "name": "@alga-psa/onboarding",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/onboarding/src",
  "projectType": "library",
  "tags": ["scope:onboarding", "type:horizontal"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": ["production", "^production"],
      "dependsOn": [
        "@alga-psa/analytics:build",
        "@alga-psa/core:build",
        "@alga-psa/db:build",
        "@alga-psa/licensing:build",
        "@alga-psa/reference-data:build",
        "@alga-psa/tenancy:build",
        "@alga-psa/types:build",
        "@alga-psa/users:build",
        "@alga-psa/validation:build"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/onboarding"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/onboarding/**/*.{ts,tsx}"]
      }
    }
  }
}
