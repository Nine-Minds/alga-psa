{
  "name": "@alga-psa/event-bus",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/event-bus/src",
  "projectType": "library",
  "tags": ["scope:event-bus", "type:horizontal"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": ["production", "^production"],
      "dependsOn": ["@alga-psa/event-schemas:build", "@alga-psa/core:build", "@alga-psa/types:build"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/event-bus"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/event-bus/**/*.{ts,tsx}"]
      }
    }
  }
}

