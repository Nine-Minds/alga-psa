{
  "name": "@alga-psa/tags",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tags/src",
  "projectType": "library",
  "tags": ["scope:tags", "type:vertical"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": ["production", "^production"],
      "dependsOn": ["@alga-psa/auth:build", "@alga-psa/core:build", "@alga-psa/db:build", "@alga-psa/types:build", "@alga-psa/validation:build"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/tags"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/tags/**/*.{ts,tsx}"]
      }
    }
  }
}
