{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "outDir": "dist",
    "noEmit": false,
    "noEmitOnError": false,
    "moduleResolution": "bundler",
    "baseUrl": "../..",
    "paths": {
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@alga-psa/shared": ["shared"],
      "@alga-psa/shared/*": ["shared/*"]
    },
    "rootDir": "../..",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts", "../../shared/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
