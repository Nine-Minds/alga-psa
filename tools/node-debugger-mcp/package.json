{
  "name": "node-debugger-mcp",
  "version": "1.0.0",
  "description": "V8 Inspector-powered Node.js debugger MCP server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:ws --external:winston --external:uuid --external:joi --external:@modelcontextprotocol/sdk",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "mcp",
    "debugger",
    "nodejs",
    "v8-inspector",
    "ai",
    "llm"
  ],
  "author": "Alga PSA",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/joi": "^17.2.2",
    "joi": "^17.13.3",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
