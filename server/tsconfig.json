{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "strictNullChecks": true,
    "noEmit": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/lib/*": ["src/lib/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/config/*": ["src/config/*"],
      "@/constants/*": ["src/constants/*"],
      "@/context/*": ["src/context/*"],
      "@/models/*": ["src/models/*"],
      "@/services/*": ["src/services/*"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"],
      "@alga-psa/shared": ["../shared"],
      "@alga-psa/shared/*": ["../shared/*"],
      "@shared/db": ["../shared/db"],
      "@shared/workflow": ["../shared/workflow"],
      "@shared/workflow/*": ["../shared/workflow/*"],
      "@shared/core": ["../shared/core"],
      "@shared/core/*": ["../shared/core/*"],
      "@shared/types": ["../shared/types"],
      "@shared/types/*": ["../shared/types/*"],
      // CE-first: use stubs by default; EE runs are overridden by webpack
      "@ee": ["src/empty"],
      "@ee/*": ["src/empty/*"],
      "@product/chat/entry": ["src/services/chatStreamService"],
      "@product/workflows/entry": ["src/empty/components/flow/DnDFlow"],
      "@product/extensions/*": ["../packages/product-extensions/*"],
      "@product/settings-extensions/*": ["../packages/product-settings-extensions/*"],
      "@product/email-providers/*": ["../packages/product-email-providers/*"],
      "@product/client-portal-domain/*": ["../packages/product-client-portal-domain/*"],
      "@product/billing/*": ["../packages/product-billing/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    ".next/types/**/*.ts",
    "migrations/*.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/invoice-templates/assemblyscript",
    "src/lib/workflows",
    "src/test/**/*"
  ]
}
