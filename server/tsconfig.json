{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "strictNullChecks": true,
    "noEmit": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/middleware/*": [
        "src/middleware/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/interfaces/*": [
        "src/interfaces/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/context/*": [
        "src/context/*"
      ],
      "@/models/*": [
        "src/models/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@shared": [
        "../shared"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@alga-psa/shared": [
        "../shared"
      ],
      "@alga-psa/shared/*": [
        "../shared/*"
      ],
      "@shared/db": [
        "../shared/db"
      ],
      "@shared/workflow": [
        "../shared/workflow"
      ],
      "@shared/workflow/*": [
        "../shared/workflow/*"
      ],
      "@shared/core": [
        "../shared/core"
      ],
      "@shared/core/*": [
        "../shared/core/*"
      ],
      "@shared/types": [
        "../shared/types"
      ],
      "@shared/types/*": [
        "../shared/types/*"
      ],
      // CE-first: use stubs by default; EE runs are overridden by webpack
      "@ee": [
        "../ee/server/src"
      ],
      "@ee/*": [
        "../ee/server/src/*"
      ],
      "@product/chat/entry": [
        "../packages/product-chat/oss/entry"
      ],
      "@product/chat/ee/entry": [
        "../packages/product-chat/ee/entry"
      ],
      "@product/chat/ee/*": [
        "../packages/product-chat/ee/*"
      ],
      "@product/ext-proxy/handler": [
        "../packages/product-ext-proxy/oss/handler"
      ],
      "@product/ext-proxy/*": [
        "../packages/product-ext-proxy/*"
      ],
      "@product/workflows/entry": [
        "src/empty/components/flow/DnDFlow"
      ],
      "@product/extensions/entry": [
        "../packages/product-extensions/oss/entry"
      ],
      "@product/extensions/*": [
        "../packages/product-extensions/*"
      ],
      "@product/settings-extensions/entry": [
        "../packages/product-settings-extensions/oss/entry"
      ],
      "@product/settings-extensions/*": [
        "../packages/product-settings-extensions/*"
      ],
      "@product/email-providers/entry": [
        "../packages/product-email-providers/oss/entry"
      ],
      "@product/email-providers/*": [
        "../packages/product-email-providers/*"
      ],
      "@product/email-domains/entry": [
        "../packages/product-email-domains/oss/entry"
      ],
      "@product/email-domains/*": [
        "../packages/product-email-domains/*"
      ],
      "@product/email-settings/entry": [
        "../packages/product-email-settings/oss/entry"
      ],
      "@product/email-settings/*": [
        "../packages/product-email-settings/*"
      ],
      "@product/client-portal-domain/entry": [
        "../packages/product-client-portal-domain/oss/entry"
      ],
      "@product/client-portal-domain/*": [
        "../packages/product-client-portal-domain/*"
      ],
      "@product/billing/entry": [
        "../packages/product-billing/oss/entry"
      ],
      "@product/billing/*": [
        "../packages/product-billing/*"
      ],
      "@alga-psa/product-extension-actions": [
        "../packages/product-extension-actions/src/index.ts"
      ],
      "server/src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "*.ts",
    "migrations/*.cjs",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "src/invoice-templates/assemblyscript",
    "src/lib/workflows",
    "src/test/**/*"
  ]
}
