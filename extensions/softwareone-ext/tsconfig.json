{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@swone/api/*": ["src/api/*"],
      "@swone/components/*": ["src/components/*"],
      "@swone/handlers/*": ["src/handlers/*"],
      "@swone/hooks/*": ["src/hooks/*"],
      "@swone/pages/*": ["src/pages/*"],
      "@swone/services/*": ["src/services/*"],
      "@swone/types/*": ["src/types/*"],
      "@swone/utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}