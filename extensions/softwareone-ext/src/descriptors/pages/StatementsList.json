{
  "type": "page",
  "meta": {
    "title": "SoftwareOne Statements",
    "description": "View and manage SoftwareOne billing statements"
  },
  "content": {
    "type": "div",
    "props": {
      "className": "min-h-screen bg-gray-50"
    },
    "children": [
      {
        "type": "header",
        "props": {
          "className": "bg-white shadow-sm border-b"
        },
        "children": [
          {
            "type": "div",
            "props": {
              "className": "px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center"
            },
            "children": [
              {
                "type": "h1",
                "props": {
                  "className": "text-xl font-semibold text-gray-900"
                },
                "children": ["SoftwareOne Statements"]
              },
              {
                "type": "div",
                "props": {
                  "className": "flex gap-2"
                },
                "children": [
                  {
                    "type": "Button",
                    "props": {
                      "variant": "outline",
                      "size": "sm"
                    },
                    "handlers": {
                      "click": "refreshStatements"
                    },
                    "children": [
                      {
                        "type": "RefreshIcon",
                        "props": {
                          "className": "w-4 h-4 mr-2"
                        }
                      },
                      "Refresh"
                    ]
                  },
                  {
                    "type": "Button",
                    "props": {
                      "variant": "primary",
                      "size": "sm"
                    },
                    "handlers": {
                      "click": "importStatements"
                    },
                    "children": [
                      {
                        "type": "UploadIcon",
                        "props": {
                          "className": "w-4 h-4 mr-2"
                        }
                      },
                      "Import to Billing"
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "main",
        "props": {
          "className": "p-6"
        },
        "children": [
          {
            "type": "Card",
            "children": [
              {
                "type": "CardContent",
                "props": {
                  "className": "p-0"
                },
                "children": [
                  {
                    "type": "table",
                    "data": {
                      "key": "statements",
                      "source": "api",
                      "endpoint": "/api/extensions/softwareone/statements"
                    },
                    "columns": [
                      {
                        "key": "statementNumber",
                        "header": "Statement #",
                        "sortable": true,
                        "cell": {
                          "type": "a",
                          "props": {
                            "className": "text-blue-600 hover:underline cursor-pointer font-medium"
                          },
                          "handlers": {
                            "click": {
                              "handler": "navigateToStatementDetail",
                              "params": {
                                "statementId": "{{row.id}}"
                              }
                            }
                          },
                          "children": ["{{row.statementNumber}}"]
                        }
                      },
                      {
                        "key": "period",
                        "header": "Period",
                        "sortable": true
                      },
                      {
                        "key": "consumer",
                        "header": "Consumer",
                        "sortable": true
                      },
                      {
                        "key": "totalAmount",
                        "header": "Total Amount",
                        "sortable": true,
                        "cell": {
                          "type": "span",
                          "props": {
                            "className": "font-medium"
                          },
                          "children": ["{{row.currency}} {{row.totalAmount.toLocaleString()}}"]
                        }
                      },
                      {
                        "key": "dueDate",
                        "header": "Due Date",
                        "sortable": true,
                        "cell": {
                          "type": "span",
                          "children": ["{{new Date(row.dueDate).toLocaleDateString()}}"]
                        }
                      },
                      {
                        "key": "status",
                        "header": "Status",
                        "sortable": true,
                        "cell": {
                          "type": "Badge",
                          "props": {
                            "variant": "{{row.status === 'processed' ? 'success' : row.status === 'imported' ? 'default' : 'warning'}}"
                          },
                          "children": ["{{row.status}}"]
                        }
                      },
                      {
                        "key": "actions",
                        "header": "",
                        "cell": {
                          "type": "div",
                          "props": {
                            "className": "flex gap-2"
                          },
                          "children": [
                            {
                              "type": "Button",
                              "props": {
                                "variant": "ghost",
                                "size": "sm"
                              },
                              "handlers": {
                                "click": {
                                  "handler": "viewStatementDetails",
                                  "params": {
                                    "statementId": "{{row.id}}"
                                  }
                                }
                              },
                              "children": ["View"]
                            },
                            {
                              "type": "Button",
                              "props": {
                                "variant": "ghost",
                                "size": "sm"
                              },
                              "condition": {
                                "path": "row.status",
                                "operator": "eq",
                                "value": "pending"
                              },
                              "handlers": {
                                "click": {
                                  "handler": "importStatement",
                                  "params": {
                                    "statementId": "{{row.id}}"
                                  }
                                }
                              },
                              "children": ["Import"]
                            }
                          ]
                        }
                      }
                    ],
                    "pagination": {
                      "enabled": true,
                      "pageSize": 10,
                      "pageSizeOptions": [10, 25, 50]
                    },
                    "filtering": {
                      "enabled": true,
                      "filters": [
                        {
                          "key": "status",
                          "label": "Status",
                          "type": "select",
                          "options": [
                            { "label": "All", "value": "" },
                            { "label": "Pending", "value": "pending" },
                            { "label": "Processed", "value": "processed" },
                            { "label": "Imported", "value": "imported" }
                          ]
                        },
                        {
                          "key": "period",
                          "label": "Period",
                          "type": "date"
                        },
                        {
                          "key": "consumer",
                          "label": "Consumer",
                          "type": "text"
                        }
                      ]
                    },
                    "sorting": {
                      "enabled": true,
                      "defaultSort": { "field": "dueDate", "order": "desc" }
                    },
                    "bulkActions": [
                      {
                        "type": "Button",
                        "props": {
                          "variant": "primary",
                          "size": "sm"
                        },
                        "handlers": {
                          "click": "importSelectedStatements"
                        },
                        "children": ["Import Selected"]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "handlers": {
    "module": "descriptors/handlers/statements.js"
  }
}