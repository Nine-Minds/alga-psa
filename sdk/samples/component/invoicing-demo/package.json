{
  "name": "@alga-samples/invoicing-demo",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist tmp bundle.tar.zst bundle.tar.zst.sha256",
    "build:js": "esbuild src/handler.ts --bundle --format=esm --platform=neutral --target=es2022 --outfile=dist/js/handler.js",
    "build:component": "jco componentize dist/js/handler.js --wit ./wit/extension-runner.wit --world-name runner --disable all --out dist/component.wasm",
    "build": "npm run clean && npm run build:js && npm run build:component",
    "postbuild": "node ./scripts/postbuild.mjs",
    "pack": "node ./scripts/pack.mjs",
    "test": "vitest"
  },
  "dependencies": {
    "@alga-psa/extension-runtime": "^0.2.0",
    "@mongodb-js/zstd": "^7.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "rimraf": "^5.0.0",
    "vitest": "^3.0.7"
  }
}
