{
  "name": "@alga-samples/invoicing-demo",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist tmp bundle.tar.zst bundle.tar.zst.sha256 ui/main.js ui/main.js.map",
    "build:js": "esbuild src/index.ts --bundle --format=esm --platform=neutral --target=es2022 --external:alga:extension/* --outfile=dist/js/index.js",
    "build:component": "jco componentize dist/js/index.js --wit ./wit/extension-runner.wit --world-name runner --disable all --out dist/component.wasm",
    "build:ui": "esbuild ui/main.ts --bundle --format=esm --platform=browser --target=es2020 --minify --outfile=ui/main.js",
    "build": "npm run clean && npm run build:js && npm run build:component && npm run build:ui",
    "postbuild": "node ./scripts/postbuild.mjs",
    "pack": "node ./scripts/pack.mjs",
    "test": "vitest"
  },
  "dependencies": {
    "@alga-psa/extension-iframe-sdk": "^0.1.0",
    "@alga-psa/extension-runtime": "^0.2.0",
    "@mongodb-js/zstd": "^7.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "rimraf": "^5.0.0",
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  }
}
