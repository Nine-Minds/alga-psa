{
  "name": "com.alga.ninemindsreporting",
  "publisher": "Nine Minds",
  "version": "0.2.1",
  "runtime": "wasm-js@1",
  "capabilities": ["cap:context.read", "cap:log.emit", "cap:ui.proxy"],
  "settings": [
    {
      "key": "api_key",
      "label": "API Key",
      "description": "API key from the master billing tenant for accessing platform reports",
      "type": "string",
      "encrypted": true,
      "required": true
    }
  ],
  "ui": {
    "type": "iframe",
    "entry": "ui/index.html",
    "hooks": {
      "appMenu": { "label": "Nine Minds Reporting" }
    }
  },
  "precompiled": {
    "x86_64-linux-gnu": "precompiled/x86_64-linux-gnu.cwasm",
    "aarch64-linux-gnu": "precompiled/aarch64-linux-gnu.cwasm"
  },
  "assets": ["ui/**/*"]
}
