{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@alga/extension-iframe-sdk": ["../../src"],
      "@alga/ui-kit": ["../../../ui-kit/src"],
      "@alga/ui-kit/*": ["../../../ui-kit/src/*"]
    }
  },
  "include": ["src", "vite-env.d.ts"]
}