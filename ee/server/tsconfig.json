{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["server/src/*", "ee/server/src/*"],
      "@ee/*": ["ee/server/src/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],  
      "@alga-psa/shared": ["shared"],
      "@alga-psa/shared/*": ["shared/*"],          
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",    
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/flow",
    // Skip tests
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.playwright.test.ts",
    "src/__tests__/**"
  ]
}
