{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "paths": {
      "@/*": [
        "ee/server/src/*"
      ],
      "@ee": [
        "ee/server/src"
      ],
      "@ee/*": [
        "ee/server/src/*"
      ],
      "@shared": [
        "shared"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@alga-psa/shared": [
        "shared"
      ],
      "@alga-psa/shared/*": [
        "shared/*"
      ],
      "@main-test-utils": [
        "server/test-utils"
      ],
      "@main-test-utils/*": [
        "server/test-utils/*"
      ],
      "@/lib/*": [
        "ee/server/src/lib/*",
        "server/src/lib/*"
      ],
      "@/components/*": [
        "server/src/components/*"
      ],
      "@/utils/*": [
        "server/src/utils/*",
        "server/src/lib/utils/*"
      ],
      "@/config/*": [
        "server/src/config/*"
      ],
      "@/interfaces/*": [
        "server/src/interfaces/*"
      ],
      "@/models/*": [
        "server/src/models/*",
        "server/src/lib/models/*"
      ],
      "@/services/*": [
        "server/src/services/*",
        "server/src/lib/services/*"
      ],
      "@/hooks/*": [
        "server/src/hooks/*"
      ],
      "@/constants/*": [
        "server/src/constants/*"
      ],
      "@/context/*": [
        "server/src/context/*"
      ],
      "@/middleware/*": [
        "server/src/middleware/*"
      ],
      "@/pages/*": [
        "server/src/pages/*"
      ],
      "@product/chat/entry": ["server/src/services/chatStreamService"],
      "@server": ["server/src"],
      "@server/*": ["server/src/*"],
      "@product/workflows": ["packages/product-workflows/src/index.ts"],
      "@product/workflows/*": ["packages/product-workflows/src/*"],
      "@product/workflows/entry": ["packages/product-workflows/ee/entry"],
      "@product/extensions/entry": ["packages/product-extensions/oss/entry"],
      "@product/extensions/*": ["packages/product-extensions/*"],
      "@product/settings-extensions/entry": ["packages/product-settings-extensions/oss/entry"],
      "@product/settings-extensions/*": ["packages/product-settings-extensions/*"],
      "@product/email-providers/entry": ["packages/product-email-providers/oss/entry"],
      "@product/email-providers/*": ["packages/product-email-providers/*"],
      "@product/client-portal-domain/entry": ["packages/product-client-portal-domain/oss/entry"],
      "@product/client-portal-domain/*": ["packages/product-client-portal-domain/*"],
      "@product/billing/entry": ["packages/product-billing/oss/entry"],
      "@product/billing/*": ["packages/product-billing/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../server/src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/flow",
    
    "../../server/src/test/**",
    "../../server/test-utils/**",
    // Skip unit tests/specs but keep Playwright (handled via include paths)
    
    ".next/types/**"
  ]
}
