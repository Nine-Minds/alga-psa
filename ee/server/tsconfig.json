{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "paths": {
      "@/*": [
        "server/src/*"
      ],
      "@ee": [
        "ee/server/src"
      ],
      "@ee/*": [
        "ee/server/src/*"
      ],
      "@shared": [
        "shared"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@alga-psa/shared": [
        "shared"
      ],
      "@alga-psa/shared/*": [
        "shared/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "ee/server/src/**/*.ts",
    "ee/server/src/**/*.tsx",
    "server/src/**/*.ts",
    "server/src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/flow",
    // Skip tests
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.playwright.test.ts",
    "src/__tests__/**"
  ]
}
