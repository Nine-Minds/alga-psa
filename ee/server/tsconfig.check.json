  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/lib/extensions/**/*.ts",
    "src/lib/extensions/**/*.tsx",
    "src/lib/actions/extMenuActions.ts",
    "src/lib/actions/extBundleActions.ts",
    "src/lib/actions/extRegistryV2Actions.ts"
