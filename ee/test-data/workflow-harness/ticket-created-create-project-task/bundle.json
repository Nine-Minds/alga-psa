          "name": "Fixture: Ticket Created → Create Project Task",
          "description": "Create a follow-up project task when a ticket is created (project id provided via ticket fixture attributes).",
          "payloadSchemaRef": "payload.TicketCreated.v1",
          "trigger": { "type": "event", "eventName": "TICKET_CREATED" },
          "steps": [
            { "id": "state-onboarding", "type": "state.set", "config": { "state": "ONBOARDING" } },
            {
              "id": "load-ticket",
              "type": "action.call",
              "config": {
                "actionId": "tickets.find",
                "version": 1,
                "inputMapping": {
                  "ticket_id": { "$expr": "payload.ticketId" },
                  "include": { "attributes": true }
                },
                "saveAs": "lookup"
              }
            },
            {
              "id": "assign-task-title",
              "type": "transform.assign",
              "config": {
                "assign": {
                  "vars.projectId": { "$expr": "vars.lookup.ticket.attributes.fixture_project_id" },
                  "vars.marker": { "$expr": "'[fixture ticket-created-create-project-task]'" },
                  "vars.taskTitle": { "$expr": "'[fixture ticket-created-create-project-task] Follow-up for ticketId=' & payload.ticketId" }
                }
              }
            },
            {
              "id": "create-task",
              "type": "action.call",
              "config": {
                "actionId": "projects.create_task",
                "version": 1,
                "inputMapping": {
                  "project_id": { "$expr": "vars.projectId" },
                  "title": { "$expr": "vars.taskTitle" }
                }
              }
            },
            { "id": "done", "type": "control.return" }
          ]
        }
      },
