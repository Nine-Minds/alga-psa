          "name": "Fixture: Appointment Created → Assign + Notify",
          "description": "On appointment created, create a schedule entry for the technician and send an in-app notification.",
          "payloadSchemaRef": "payload.AppointmentCreated.v1",
          "trigger": { "type": "event", "eventName": "APPOINTMENT_CREATED" },
          "steps": [
            { "id": "state-appointment", "type": "state.set", "config": { "state": "APPOINTMENT" } },
            {
              "id": "assign-text",
              "type": "transform.assign",
              "config": {
                "assign": {
                  "vars.marker": { "$expr": "'[fixture appointment-created-assign-notify]'" },
                  "vars.title": { "$expr": "vars.marker & ' appointmentId=' & payload.appointmentId" },
                  "vars.body": { "$expr": "'ticketId=' & payload.ticketId & ' startAt=' & payload.startAt" }
                }
              }
            },
            {
              "id": "assign-tech",
              "type": "action.call",
              "config": {
                "actionId": "scheduling.assign_user",
                "version": 1,
                "inputMapping": {
                  "user_id": { "$expr": "payload.assigneeId" },
                  "window": { "$expr": "{ \"start\": payload.startAt, \"end\": payload.endAt, \"timezone\": payload.timezone }" },
                  "link": { "$expr": "{ \"type\": \"ticket\", \"id\": payload.ticketId }" },
                  "title": { "$expr": "vars.title" },
                  "notes": { "$expr": "vars.body" },
                  "conflict_mode": "override"
                }
              }
            },
            {
              "id": "notify-each",
              "type": "control.forEach",
              "items": { "$expr": "[payload.assigneeId]" },
              "itemVar": "recipientUserId",
              "body": [
                {
                  "id": "notify-tech",
                  "type": "action.call",
                  "config": {
                    "actionId": "notifications.send_in_app",
                    "version": 1,
                    "inputMapping": {
                      "recipients": { "$expr": "{ \"user_ids\": [vars.recipientUserId] }" },
                      "title": { "$expr": "vars.title" },
                      "body": { "$expr": "vars.body" },
                      "severity": "info",
                      "dedupe_key": { "$expr": "'fixture.appointment-created-assign-notify:' & payload.appointmentId" }
                    }
                  }
                }
              ]
            },
            { "id": "done", "type": "control.return" }
          ]
        }
