      "metadata": {
        "name": "Fixture: Ticket Tags → Billing Route",
        "description": "If billing tag added, route ticket to billing status and notify.",
        "payloadSchemaRef": "payload.TicketTagsChanged.v1",
        "payloadSchemaMode": "pinned",
        "pinnedPayloadSchemaRef": "payload.TicketTagsChanged.v1",
        "trigger": { "type": "event", "eventName": "TICKET_TAGS_CHANGED" },
        "isSystem": false,
        "isVisible": true,
        "isPaused": false,
        "concurrencyLimit": null,
        "autoPauseOnFailure": false,
        "failureRateThreshold": null,
        "failureRateMinRuns": null,
        "retentionPolicyOverride": null
      },
      "dependencies": {
        "actions": [
          { "actionId": "tickets.update_fields", "version": 1 },
          { "actionId": "notifications.send_in_app", "version": 1 }
        ],
        "nodeTypes": ["action.call", "control.if", "control.return", "state.set", "transform.assign"],
        "schemaRefs": ["payload.TicketTagsChanged.v1"]
