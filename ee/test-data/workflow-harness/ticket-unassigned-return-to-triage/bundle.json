                  "body": { "$expr": "vars.body" },
                  "severity": "info",
                  "dedupe_key": { "$expr": "'fixture.ticket-unassigned-return-to-triage:notify:' & payload.ticketId" }
                }
              }
            },
            { "id": "done", "type": "control.return" }
          ]
