{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noEmit": false,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@shared/*": ["./*"],
      "@shared/workflow/*": ["./workflow/*"],
      "@shared/lib/*": ["./lib/*"],
      "@alga-psa/shared/*": ["./*"],
      "next-auth": ["../node_modules/next-auth"],
      "next-auth/*": ["../node_modules/next-auth/*"],
      "@auth/core": ["../node_modules/@auth/core"],
      "@auth/core/*": ["../node_modules/@auth/core/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.d.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "workflow/workflows/system-email-processing-workflow.ts"]
}
