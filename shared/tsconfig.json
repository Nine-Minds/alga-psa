{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "target": "es2022",
    "paths": {
      "@shared/*": ["./*"],
      "@shared/workflow/*": ["./workflow/*"],
      "@shared/core/*": ["./core/*"],
      "@shared/types/*": ["./types/*"],
      "@alga-psa/shared/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "dist", "workflow/workflows/system-email-processing-workflow.ts"]
}
